$gray-medium-light: #eaeaea;
$state-danger-text: #a94442;
@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}


/* Miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}


/* Universal */

body {
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 14px;
}

a {
  color: #5CC0DE;
  text-decoration: none;
}

a:hover {
  color: #5CC0DE;
  font-weight: 600;
  text-decoration: none;
}

.centered {
  margin-left: auto;
  margin-right: auto;
}


/* Header */

.navbar-default {
  background-color: #bed970;
  border-color: #bed970;
}

.navbar-default .navbar-brand {
  color: #000000;
}

.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus {
  color: #255f8a;
}

.navbar-default .navbar-text {
  color: #000000;
}

.navbar-default .navbar-nav > li > a {
  color: #000000;
}

.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > li > a:focus {
  color: #255f8a;
}

.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus {
  color: #255f8a;
  background-color: #bed970;
  font-weight: 600;
}

.navbar-default .navbar-nav > .open > a,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > .open > a:focus {
  color: #255f8a;
  background-color: #bed970;
}

.navbar-default .navbar-toggle {
  border-color: #bed970;
}

.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
  background-color: #bed970;
}

.navbar-default .navbar-toggle .icon-bar {
  background-color: #000000;
}

.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: #000000;
}

.navbar-default .navbar-link {
  color: #000000;
}

.navbar-default .navbar-link:hover {
  color: #255f8a;
}

@media (max-width: 767px) {
  .navbar-default .navbar-nav .open .dropdown-menu > li > a {
    color: #000000;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
    color: #255f8a;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
    color: #255f8a;
    background-color: #bed970;
    font-weight: 600;
  }
}


/* Logo */

#logo {
  background: url(<%= asset_path('logo.png') %>) no-repeat left/50%;
  font-size: 1.5em;
  font-weight: bold;
  margin-left: .25em;
  padding-left: .75em;
}


/* Home */

.center-block {
  float: none !important
}

.home-option {
  margin: 0 auto;
  margin-bottom: 1em;
  width: 100%;
}

.button-text {
  display: inline-block;
  padding-top: 2em;
}

.button-logo {
  float: left;
}


/* Forms */

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}


/* Signup Form */

#signup-form h2 {
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
}

#signup-form input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#signup-form input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Login Form */

#login-form h2 {
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
}

#login-form input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#login-form input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Tabs */

.tabs {
  height: 50px;
  font-size: 1.5em;
  font-weight: 600;
  line-height: 50px;
  text-align: center;
}

.tabs a {
  color: #000000;
}

.right-tab-selected {
  background-color: #FFFFFF;
  border-right: 1px solid #000000;
  border-top: 1px solid #000000;
  border-left: 1px solid #000000;
  border-bottom: 1px solid #DDDDDC;
  float: left;
  height: 100%;
  width: 50%;
}

.right-tab-unselected {
  background-color: #DDDDDC;
  border-bottom: 1px solid #000000;
  float: left;
  height: 100%;
  width: 50%;
}

.left-tab-selected {
  background-color: #FFFFFF;
  border-right: 1px solid #000000;
  border-top: 1px solid #000000;
  border-left: 1px solid #000000;
  border-bottom: 1px solid #DDDDDC;
  float: right;
  height: 100%;
  width: 50%;
}

.left-tab-unselected {
  background-color: #DDDDDC;
  border-bottom: 1px solid #000000;
  float: right;
  height: 100%;
  width: 50%;
}


/* Profile Edit */

#profile-edit {
  background-color: #FFFFFF;
  border-bottom: 1px solid #000000;
  border-left: 1px solid #000000;
  border-right: 1px solid #000000;
  padding: 30px;
  padding-bottom: 0;
}

#profile-edit input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#profile-edit input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Profile View */

#profile-view {
  background-color: #FFFFFF;
  /*  border: 1px solid #000000;*/
  clear: both;
  text-align: center;
}

#profile-view {
  border-bottom: 1px solid #DDDDDC;
  font-size: 1.5em;
}

#profile-view #profile-name {
  margin-top: 1em;
}

#profile-view .profile-info {
  border-top: 1px solid #DDDDDC;
  font-weight: 400;
  padding: .5em 0;
}

#profile-picture {
  margin-bottom: 1.5em;
}

#profile-picture img {
  border: 1px solid #979797;
  margin-bottom: .25em;
}

#profile-picture-placeholder {
  background: #DDDDDC;
  border: 1px solid #979797;
  height: 200px;
  width: 200px;
  margin-bottom: 1.75em;
  margin-left: auto;
  margin-right: auto;
}


/* Events */

#filterDropdown {
  margin-bottom: 20px;
}

#filterDropdown ul {
  width: 100%;
  text-align: center;
}

.button {
  background-color: #DDDDDC;
  /* background-color: #5CC0DE; */
  border: 1px solid #979797;
  cursor: pointer;
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 1.2em;
  font-weight: 600;
  color: black;
  height: 1.7em;
  margin-top: 1em;
  outline: 0;
  width: 100%;
}

#events {
  background-color: #FFFFFF;
  border-bottom: 1px solid #000000;
  border-right: 1px solid #000000;
  border-left: 1px solid #000000;
  clear: both;
}

#events a {
  color: #000000;
}

.event {
  align-items: center;
  border-bottom: 1px solid #DDDDDC;
  display: flex;
  min-height: 50px;
  text-align: center;
}

.event:hover {
  background-color: #DDDDDC;
}

.event .title {
  float: left;
  font-size: 1.2em;
  width: 70%;
}

.event .date {
  float: right;
  font-size: 1em;
  font-weight: 300;
  width: 30%;
}


/* Event */

#event-tab {
  align-items: center;
  border-bottom: 1px solid #000000;
  display: flex;
  /* height: 100px; */
  font-size: 2em;
  font-weight: 600;
  justify-content: center;
  /* line-height: 100px; */
  min-height: 100px;
  text-align: center;
  margin-top: -20px;
}

#event-date {
  font-size: 1.25em;
  font-weight: 300;
  text-align: center;
  margin-top: 1em;
  margin-bottom: 0.25em;
}

#event-points {
  font-size: 1.25em;
  font-weight: 300;
  margin-bottom: .25em;
  text-align: center;
}

#event-category {
  color: #5CC0DE;
  font-size: 1.25em;
  margin-bottom: 0.75em;
  text-align: center;
}

#event-container {
  padding: 0 1em 1em 1em;
}

#event-info {
  padding: 0 1em;
  text-align: left;
}

#event-location {
  margin-top: 2em;
}

#event-location p {
  padding: 0 1em;
  text-align: left;
}

.map {
  border: 1px solid #979797;
  display: block;
  height: auto;
  margin: 2em auto 2em auto;
  text-align: center;
  vertical-align: middle;
  max-width: 90%;
}

#attendees {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  width: 100%;
}

#attendees a {
  color: #000000;
}

.attendee {
  text-align: center;
  font-size: 1em;
}

.placeholder {
  background-color: #DDDDDC;
  height: 45px;
  margin: auto;
  margin-bottom: .5em;
  width: 45px;
}

#more {
  clear: both;
  float: right;
  padding-top: .75em;
  padding-right: 1em;
}

.btn-rsvp {
  font-size: 1.2em;
  font-weight: 600;
  margin-top: 1em;
  width: 100%;
}

.btn-going {
  background-color: #5CC0DE;
  color: #FFFFFF;
}

.btn-going:hover {
  background-color: #DDDDDC;
  border: 1px solid #000000;
}

.btn-not-going {
  background-color: #DDDDDC;
  border: 1px solid #000000;
}

.btn-not-going:hover {
  background-color: #5CC0DE;
  color: #FFFFFF;
}

.post {
  border: 1px solid #DDDDDC;
  box-sizing: border-box;
  padding: 0.5em 1em;
  margin: 1em 0;
}

.post p {
  color: #979797;
}

i.fa.fa-heart.like {
  color: #F26D61;
  font-size: 0.8em;
  padding-right: .5em;
}

.post-links {
  text-align: right;
}

.user-post {
  color: #979797;
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 14px;
  margin-top: 0;
  resize: none;
  width: 100%;
}

.reply {
  cursor: pointer;
}


/* User Post placeholder text color */

.user-post::-webkit-input-placeholder {
  /* WebKit, Blink, Edge */
  color: #DDDDDC;
}

.user-post:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #DDDDDC;
  opacity: 1;
}

.user-post::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #DDDDDC;
  opacity: 1;
}

.user-post:-ms-input-placeholder {
  /* Internet Explorer 10-11 */
  color: #DDDDDC;
}

.user-post-links {
  height: auto;
  margin-bottom: 1.5em;
  text-align: right;
  cursor: pointer;
}

.user-post-links a {
  /* background-color: #5CC0DE; */
  background-color: #FFFFFF;
  border: 1px solid #979797;
  color: #000000;
  padding: 0.25em 1.25em;
}

.user-post-links a:hover {
  /* background-color: #FFFFFF; */
  background-color: #5CC0DE;
}


/* Help */

.section-title {
  margin-top: 1em;
  margin-bottom: 1.5em;
}

.answer {
  display: none;
  margin-top: .5em;
}

.answer p {
  margin-bottom: 0;
}

.question {
  color: #5CC0DE;
}

.faq {
  padding-bottom: .75em;
}


/* About */

.about-text {
  color: #5CC0DE;
  font-size: 1.2em;
}


/* Diary */

#diaryEvents {
  padding-bottom: 10px;
  padding-left: 10px;
  padding-right: 10px;
}

#diaryEvents [type=submit] {
  background-color: #DDDDDC;
  color: #000000;
  margin-top: 1em;
  width: 100%;
}

#diaryEvents [type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}

.diaryEvent {
  padding-bottom: 30px;
  border-bottom: 1px solid #DDDDDC;
}

.diaryEvent .title {
  font-size: 1.5em;
  font-weight: bold;
}

.diaryEvent img {
  margin-right: 20px;
  width: 33%;
  float: left;
}

.diaryEvent .text {
  font-size: 1em;
  text-align: left;
}


/* Edit Diary */

.editor {
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  border: 1px solid #979797;
  width: 100%;
  background: buttonface;
}

#toolbar {
  padding-top: 10px;
  padding-bottom: 10px;
  width: 90%;
  background: buttonface;
}

.toolbarButton {
  margin-right: 20%;
  border: 0;
  text-align: center;
  cursor: default;
  font-size: 1.5em;
}

.photo-options {
  background-color: #DDDDDC;
  border: 1px solid #FFFFFF;
  padding: .25em 0;
}

.photo-options a {
  color: #000000;
}

.clickedButton {
  border: 1px;
  background: grey;
}

.boldButton {
  font-weight: bold;
}

.italicButton {
  font-style: italic;
}

.underlineButton {
  text-decoration: underline;
}

#camIconTd {
  width: 50%;
}

.cameraButton {
  cursor: pointer;
  position: relative;
  height: 30%;
}

.content {
  background: buttonface;
}

.photoMenu {
  background-color: #FFFFFF;
  display: none;
  font-size: 1.2em;
  text-align: center;
}

#diary-edit input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#diary-edit input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}