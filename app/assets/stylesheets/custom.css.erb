$gray-medium-light: #eaeaea;
$state-danger-text: #a94442;
@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}


/* Miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}


/* Universal */

body {
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 14px;
}

a {
  color: #000000;
  text-decoration: none;
}

a:hover {
  color: #5CC0DE;
  font-weight: 600;
  text-decoration: none;
}


/* Header */

.navbar-default {
  background-color: #bed970;
  border-color: #bed970;
}

.navbar-default .navbar-brand {
  color: #000000;
}

.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus {
  color: #255f8a;
}

.navbar-default .navbar-text {
  color: #000000;
}

.navbar-default .navbar-nav > li > a {
  color: #000000;
}

.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > li > a:focus {
  color: #255f8a;
}

.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus {
  color: #255f8a;
  background-color: #bed970;
  font-weight: 600;
}

.navbar-default .navbar-nav > .open > a,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > .open > a:focus {
  color: #255f8a;
  background-color: #bed970;
}

.navbar-default .navbar-toggle {
  border-color: #bed970;
}

.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
  background-color: #bed970;
}

.navbar-default .navbar-toggle .icon-bar {
  background-color: #000000;
}

.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: #000000;
}

.navbar-default .navbar-link {
  color: #000000;
}

.navbar-default .navbar-link:hover {
  color: #255f8a;
}

@media (max-width: 767px) {
  .navbar-default .navbar-nav .open .dropdown-menu > li > a {
    color: #000000;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
    color: #255f8a;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
    color: #255f8a;
    background-color: #bed970;
    font-weight: 600;
  }
}


/* Logo */

#logo {
  background: url(<%= asset_path('logo.png') %>) no-repeat left/50%;
  font-size: 1.5em;
  font-weight: bold;
  margin-left: .25em;
  padding-left: .75em;
}


/* Home */

.center-block {
  float: none !important
}

.home-option {
  margin: 0 auto;
  margin-bottom: 1em;
  width: 100%;
}

.button-text {
  display: inline-block;
  padding-top: 2em;
}

.button-logo {
  float: left;
}


/* Forms */

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}


/* Signup Form */

#signup-form h2 {
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
}

#signup-form input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#signup-form input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Login Form */

#login-form h2 {
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
}

#login-form input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#login-form input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Tabs */

.tabs {
  height: 50px;
  font-size: 1.5em;
  font-weight: 600;
  line-height: 50px;
  text-align: center;
}

.right-tab-selected {
  background-color: #FFFFFF;
  border-right: 1px solid #000000;
  border-top: 1px solid #000000;
  border-left: 1px solid #000000;
  border-bottom: 1px solid #DDDDDC;
  float: left;
  height: 100%;
  width: 50%;
}

.right-tab-unselected {
  background-color: #DDDDDC;
  border-bottom: 1px solid #000000;
  float: left;
  height: 100%;
  width: 50%;
}

.left-tab-selected {
  background-color: #FFFFFF;
  border-right: 1px solid #000000;
  border-top: 1px solid #000000;
  border-left: 1px solid #000000;
  border-bottom: 1px solid #DDDDDC;
  float: right;
  height: 100%;
  width: 50%;
}

.left-tab-unselected {
  background-color: #DDDDDC;
  border-bottom: 1px solid #000000;
  float: right;
  height: 100%;
  width: 50%;
}


/* Profile Edit */

#profile-edit {
  background-color: #FFFFFF;
  border-bottom: 1px solid #000000;
  border-left: 1px solid #000000;
  border-right: 1px solid #000000;
  padding: 30px;
  padding-bottom: 0;
}

#profile-edit input[type=submit] {
  background-color: #DDDDDC;
  width: 100%;
}

#profile-edit input[type=submit]:hover {
  color: #FFFFFF;
  background-color: #5CC0DE;
}


/* Events */

#filterDropdown {
  margin-bottom: 20px;
}

#filterDropdown ul {
  width: 100%;
  text-align: center;
}

.button {
  background-color: #DDDDDC;
  /* background-color: #5CC0DE; */
  border: 1px solid #979797;
  cursor: pointer;
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 1.2em;
  font-weight: 600;
  color: black;
  height: 1.7em;
  margin-top: 1em;
  outline: 0;
  width: 100%;
}

#events {
  background-color: #FFFFFF;
  border-bottom: 1px solid #000000;
  border-right: 1px solid #000000;
  border-left: 1px solid #000000;
  clear: both;
}

.event {
  align-items: center;
  border-bottom: 1px solid #DDDDDC;
  display: flex;
  min-height: 50px;
  text-align: center;
}

.event:hover {
  background-color: #DDDDDC;
}

.event .title {
  float: left;
  font-size: 1.2em;
  width: 70%;
}

.event .date {
  float: right;
  font-size: 1em;
  font-weight: 300;
  width: 30%;
}