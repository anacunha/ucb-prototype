<% provide(:title, 'Sign up') %>

<div class="row" id="signup-form">
  <h2>Sign up</h2>
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
      <%= render 'shared/error_messages' %>
    
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Full Name' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :partner_organization, "Partner Organization", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :partner_organization, class: 'form-control', placeholder: 'Partner Organization' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :gender, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.select(:gender, [['Female', 'female'], ['Male', 'male']], {include_blank: '-'}, {:class => "form-control",}) %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :neighborhood, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :neighborhood, class: 'form-control', placeholder: 'Neighborhood' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :workplace, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :workplace, class: 'form-control', placeholder: 'Workplace' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :phone, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.number_field :phone, class: 'form-control', placeholder: 'Phone Number' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :address, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :city, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :state, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :state, class: 'form-control', placeholder: 'State' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :zip_code, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.number_field :zip_code, class: 'form-control', placeholder: 'Zip Code' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Create Account", class: "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
</div>